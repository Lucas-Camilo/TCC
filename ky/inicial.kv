<Gerenciador>:
    Main:
        name: 'main'
    Login:
        name: 'login'


<Login>:
    BoxLayout:
        orientation:'vertical'
        size_hint_y: .4
        pos_hint: {'center_x':.5, 'center_y':.5}
        spacing: 20
        Image:
            source:"images/placeholder-logo.png"
            size_hint_y: None
            height: 150
        TextInput:
            id: user
            hint_text: 'User'
            multiline: False
            size_hint: (.8, None)
            height: 40
            pos_hint: {'center_x':.5, 'center_y':.5}
        TextInput:
            id: password
            hint_text: 'Password'
            password: True
            multiline: False
            size_hint: (.8, None)
            height: 40
            pos_hint: {'center_x':.5, 'center_y':.5}
        BoxLayout:
            orientation: 'horizontal'
            spacing: 5
            size_hint: (.8, .1)
            pos_hint: {'center_x':.5, 'center_y':.5}
            Label:
                text: "Esqueci minha senha"
                color: 0,0,1,1
                size_hint_y: 1
            Label:
                text: "NÃ£o tenho conta"
                color: 0,0,1,1
                size_hint_y: 1
        Button:
            text: 'Logar'
            size_hint: (.8, None)
            height: 40
            pos_hint: {'center_x':.5, 'center_y':.5}
        
<Main>
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
