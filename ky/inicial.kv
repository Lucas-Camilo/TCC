<Gerenciador>:
    Login:
        name: 'login'
    Main:
        name: 'main'
    GetVideo:
        name:'getvideo'
    Resultado:
        name: 'resultado'



<Login>:
    BoxLayout:
        orientation:'vertical'
        size_hint_y: .4
        pos_hint: {'center_x':.5, 'center_y':.5}
        spacing: 20
        Image:
            source:"images/Logo.png"
            size_hint_y: None
            height: 150
        TextInput:
            id: user
            hint_text: 'User'
            multiline: False
            size_hint: (.8, None)
            height: 40
            pos_hint: {'center_x':.5, 'center_y':.5}
        TextInput:
            id: password
            hint_text: 'Password'
            password: True
            multiline: False
            size_hint: (.8, None)
            height: 40
            pos_hint: {'center_x':.5, 'center_y':.5}
        BoxLayout:
            orientation: 'horizontal'
            spacing: 5
            size_hint: (.8, .1)
            pos_hint: {'center_x':.5, 'center_y':.5}
            Label:
                markup: True
                bold: True
                text: "Esqueci minha senha"
                size_hint_y: 1
            Label:
                markup: True
                bold: True
                text: "Cadastre-se"
                size_hint_y: 1
        Button:
            text: 'Logar'
            size_hint: (.8, None)
            height: 40
            pos_hint: {'center_x':.5, 'center_y':.5}
            on_release: root.login()

<Main>
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 90
            Button:
                background_normal: "images/ham.png"
                halign: "right"
                size_hint_x: None
                height: 90
            Image:
                source:"images/Logo.png"
                size_hint: (None, None)
                height: 30
                size_hint: .02, 1
            Button:
                background_normal: "images/conf.png"
                halign: "right"
                size_hint_x: None
                height: 90
        ScrollView:
            orientation: 'vertical'
            BoxLayout:
                orientation:'vertical'
                size_hint: (1, .5)
                heigth: self.minimum_height
                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 50
                    size_hint: (None, 1)
                    width: self.minimum_width
                    pos_hint: {'center_x':.5, 'center_y':.5}
                    Button:
                        size: 120, 120
                        size_hint: None, None
                        on_release: root.manager.current = 'getvideo'
                        StackLayout:
                            pos: self.parent.pos
                            size: self.parent.size
                            orientation: 'lr-tb'
                            Image:
                                source: 'images/up-video.png'
                                border: 0,0,0,0
                                size_hint: (None, None)
                                width: 100
                            Label:
                                size_hint: (.9, .01)
                                width: 100
                                font_size: '18'
                                text: "Enviar Video"
                    Button:
                        size: 120, 120
                        size_hint: None, None
                        StackLayout:
                            pos: self.parent.pos
                            size: self.parent.size
                            orientation: 'lr-tb'
                            Image:
                                source: 'images/tarefa.png'
                                border: 0,0,0,0
                                size_hint: (None, .7)
                                width: 100
                            Label:
                                size_hint: (.9, .4)
                                width: 100
                                font_size: '18'
                                text: "Registro"
<GetVideo>
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 200
            size_hint_x: .9
            pos_hint: {'center_x':.5, 'center_y':.5}
            TextInput:
                text: 'Para atender às exigências legais da Lei Geral de Proteção de Dados Pessoais (LGPD) e à Política de Segurança da Informação, é proibido a realização de prints'
                size_hint_y: .9
        BoxLayout:
            orientation: 'vertical'
            spacing: 100
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                size_hint_x: .9
                height: 90
                pos_hint: {'center_x':.5, 'center_y':.5}
                spacing: 10
                Image:
                    source: 'images/claquete.png'
                    border: 0,0,0,0
                    size_hint: (None, None)
                    width: 40
                TextInput:
                    id: caminho
                    hint_text: 'c:/'
                    size_hint_y: None
                    height: 30
                    pos_hint: {'center_x':.5, 'center_y':.5}
                Button:
                    background_normal: 'images/enviar.png'
                    size_hint: (None, None)
                    border: 0,0,0,0
                    height: 30
                    width: 30
                    pos_hint: {'center_x':.5, 'center_y':.5}
                    on_release: root.get_video()
            BoxLayout:
                orientation: 'vertical'
                spacing: 20
                BoxLayout:
                    size_hint: (.4, None)
                    pos_hint: {'center_x':.5, 'center_y':.5}
                    height: 50
                    Button:
                        text: 'Analisar'
                        size_hint: (1,1)
                        on_release: root.analizar()
                BoxLayout:
                    orientation: 'vertical'
                    Button:
                        size_hint: (None, None)
                        height: 100
                        background_normal: 'images/voltar.png'
                        border: 0,0,0,0
                        on_release: root.manager.current = 'main'
<Resultado>
    on_pre_enter: root.mostrar_resultados()
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint: (1, .2)
            Label:
                text: 'Resultados'
                font_size: 30
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: raiva
                text: 'Raiva ? %'
            Label:
                id: medo
                text: 'Medo ? %'
            Label:
                id: nojo
                text: 'Nojo ? %'
            Label:
                id: felicidade
                text: 'Feliciade ? %'
            Label:
                id: tristeza
                text: 'Tristeza ? %'
            Label:
                id: surpresa
                text: 'Surpresa ? %'
            Label:
                id: desprezo
                text: 'Desprezo ? %'
            Label:
                id: neutro
                text: 'Neutro ? %'
        BoxLayout:
            size_hint_y: None
            height: 60
            Button:
                text:'Tarefas'
            Button:
                text:'OK'

<PopCarregando>
    title: "Realizando análise"
    size_hint: (None, None)
    size: (350, 300)
    BoxLayout:
        Label:
            text: 'Carregando'
            font_size: 30
<MyPopUp>
    title: ""
    separator_height: 0
    BoxLayout:
        FileChooserIconView:
            id: filechooser
            on_selection: root.salvar(*args)
            filters: ['*.mp4']